#!/bin/sh
ME=$(basename $0)

printSyntax()
{
  echo "zopen-version: print version information" >&2
  echo "Syntax: zopen-version [OPTIONS]" >&2
  echo "where OPTIONS can be:" >&2
  echo "  --help: print this help" >&2
  echo "  --version: print version" >&2
}

tool='zopen' # Default name

if [[ $# -eq 1 ]]; then
  if [ "x$1" = "x--help" ]; then
    printSyntax
    exit 0
  elif [ "x$1" = "x--version" ]; then
    : # fall-through
  else
    tool="$1"
  fi
fi

set -e
export libdir="$( cd "$(dirname "$0")" >/dev/null 2>&1 && pwd -P )"
export rootdir="$( cd "$libdir/../../" && dirname "$PWD" >/dev/null 2>&1 && pwd -P )"

if [ "x${libdir}" = "x" ] || [ "x${rootdir}" = "x" ]; then
  echo "Internal error. Unable to determine version information" >&2
  exit 8
fi

version=$(cat "${rootdir}/.version")
package="zopen tools"
copyright="Copyright (C) 2023 z/OS Open Tools Community"
license="License Apache Version 2.0, January 2004 <https://www.apache.org/licenses>"
freesw="This is free software: you are free to change and redistribute it."
warranty="There is NO WARRANTY, to the extent permitted by law."
authors="Written by contributors to the z/OS Open Tools Community <https://github.com/ZOSOpenTools/meta/graphs/contributors>"

printf "%s %s %s\n%s\n%s\n%s\n%s\n\n%s\n" "${tool}" "(${package})" "${version}" "${copyright}" "${license}" "${freesw}" "${warranty}" "${authors}"
